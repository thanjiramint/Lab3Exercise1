<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grade Points"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/tvGP"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="32sp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:id="@+id/textView3"
        android:layout_below="@+id/tvGP"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvCR"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textSize="32sp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grade Point Average"
        android:id="@+id/textView5"
        android:layout_below="@+id/tvCR"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGPA"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:text="tvGPA" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Course"
        android:id="@+id/button2"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="courseActClicked" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Course List"
        android:id="@+id/button4"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:onClick="courseListClicked" />
</RelativeLayout>
